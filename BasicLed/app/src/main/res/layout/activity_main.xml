<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    //三原色控制模块
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="@color/red"
            android:text="R"
            android:textSize="35sp"
            android:id="@+id/text_red"/>
        <SeekBar
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:id="@+id/seek_red"
            android:indeterminate="false"
            android:max="99"
            android:progress="10"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="10%"
            android:textSize="35sp"
            android:id="@+id/red_scale"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="G"
            android:textColor="@color/green"
            android:textSize="35sp"
            android:id="@+id/text_gre"/>
        <SeekBar
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:id="@+id/seek_gre"
            android:max="99"
            android:progress="10"
            android:indeterminate="false" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="10%"
            android:textSize="35sp"
            android:id="@+id/gre_scale"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="@color/blue"
            android:text="B"
            android:textSize="35sp"
            android:id="@+id/text_blu"/>
        <SeekBar
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:id="@+id/seek_blu"
            android:max="99"
            android:progress="10"
            android:indeterminate="false" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="10%"
            android:textSize="35sp"
            android:id="@+id/blu_scale"/>
    </LinearLayout>


    //按钮
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/clock_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/set_clock"/>
    </LinearLayout>

</LinearLayout>